<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informasi_pribadi">

    <View
        android:id="@+id/atasan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/atasan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:textColor="@color/white"
        android:text="Informasi Pribadi"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/atasan"
        app:layout_constraintBottom_toBottomOf="@+id/atasan"
        app:layout_constraintTop_toTopOf="@+id/atasan"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atasan"
        android:text="Informasi Pengguna"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/nm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ip"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/nama"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/nm"
        app:layout_constraintLeft_toLeftOf="@+id/nm"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="Tanboy Kun"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/nama"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/nama"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/emaill"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="tanboykun@gmail.com"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/emaill"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/emaill"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/alm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emaill"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/alamat"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/alm"
        app:layout_constraintLeft_toLeftOf="@+id/alm"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="Jl. Mawar No.31"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/alamat"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/alamat"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/nop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat"
        android:text="Nomor Ponsel"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/nohp"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/nop"
        app:layout_constraintLeft_toLeftOf="@+id/nop"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="085335148634"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/nohp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/nohp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/klm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nohp"
        android:text="Jenis Kelamin"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pria"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/klm"
        app:layout_constraintLeft_toLeftOf="@+id/klm"
        android:layout_marginLeft="50dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="508dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanita"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/radioButton"
        app:layout_constraintTop_toBottomOf="@+id/klm"
        android:layout_marginLeft="110dp"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="506dp" />
    <Button
        android:id="@+id/btnsimpan"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="simpan"
        android:backgroundTint="@color/primary"
        />


</androidx.constraintlayout.widget.ConstraintLayout>