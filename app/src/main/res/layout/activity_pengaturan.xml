<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".pengaturan">
    <View
        android:id="@+id/atasan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/atasan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:textColor="@color/white"
        android:text="Pengaturan"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/atasan"
        app:layout_constraintBottom_toBottomOf="@+id/atasan"
        app:layout_constraintTop_toTopOf="@+id/atasan"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/nama"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/nm"
        app:layout_constraintLeft_toLeftOf="@+id/nm"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/bunyi"
        android:text="Bunyikan Notifikasi Pesan"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/nama"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/nama"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/nama"
        android:layout_marginTop="13dp"
        tools:layout_editor_absoluteX="292dp"
        app:layout_constraintRight_toRightOf="@+id/nama"
        android:layout_marginLeft="45dp"
        tools:layout_editor_absoluteY="136dp"/>
    <TextView
        android:id="@+id/nm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atasan"
        android:text="Notifikasi"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/tmp"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tampilan"
        app:layout_constraintLeft_toLeftOf="@+id/nm"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tampilan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        android:text="Tampilan"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/tt"
        android:text="Mode Terang"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/tmp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/tmp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tmp"
        android:layout_marginTop="13dp"
        tools:layout_editor_absoluteX="292dp"
        app:layout_constraintRight_toRightOf="@+id/nama"
        android:layout_marginLeft="45dp"
        tools:layout_editor_absoluteY="136dp" />

    <View
        android:id="@+id/privasi"
        android:layout_width="375dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/pvs"
        app:layout_constraintLeft_toLeftOf="@+id/nm"
        android:background="@color/abu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/pvs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tmp"
        android:text="Privasi"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/pp"
        android:text="Sembunyikan foto profil"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/privasi"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@+id/privasi"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/privasi"
        android:layout_marginTop="13dp"
        tools:layout_editor_absoluteX="292dp"
        app:layout_constraintRight_toRightOf="@+id/privasi"
        android:layout_marginLeft="45dp"
        tools:layout_editor_absoluteY="136dp" />


</androidx.constraintlayout.widget.ConstraintLayout>