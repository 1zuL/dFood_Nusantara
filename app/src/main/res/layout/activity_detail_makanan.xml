<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".detail_makanan">


    <ImageView
        android:src="@drawable/sotobetawi"
        android:layout_width="270dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/pth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

<View
    android:id="@+id/pth"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="750dp"
    android:background="@drawable/bg12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
/>
   <View
       android:id="@+id/ckl"
       app:layout_constraintTop_toTopOf="@+id/pth"
       app:layout_constraintLeft_toLeftOf="@+id/pth"
       android:background="@drawable/bt"
       android:layout_width="100dp"
       android:layout_height="50dp"
       android:layout_marginLeft="35dp"
       android:layout_marginTop="20dp"
       />
    <ImageView
        android:id="@+id/bintang"
        android:background="@drawable/bintang"
        app:layout_constraintTop_toTopOf="@+id/ckl"
        app:layout_constraintLeft_toLeftOf="@+id/ckl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        app:layout_constraintLeft_toRightOf="@+id/bintang"
        app:layout_constraintTop_toTopOf="@+id/ckl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        app:layout_constraintTop_toTopOf="@+id/pth"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Rp.23.000"
        android:textColor="@color/hijau"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/namamakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ckl"
        android:text="Soto Betawi"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/ckl"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/deskrpsi"
        android:layout_width="261dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toBottomOf="@+id/namamakanan"
        android:text="Soto betawi merupakan soto santan
dengan isian daging sapi beserta
jeroan dan organ hewan lainnya"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/ckl"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/garis"
        android:src="@drawable/garis"
        android:layout_width="293dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/deskrpsi"
        app:layout_constraintLeft_toLeftOf="@+id/deskrpsi"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/bahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/garis"
        android:text="Bahan Utama"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/ckl"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/bhn"
        android:layout_width="110dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@+id/bahan"
        android:text="- Daging Sapi - Babat Sapi - Paru Sapi          - Santan"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/ckl"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btntambah"
        android:layout_width="250dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@+id/bhn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/primary"
        android:text="tambah"
        android:textSize="20dp"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>