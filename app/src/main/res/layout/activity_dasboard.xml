<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dasboardutama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dasboard">

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary"
        android:id="@+id/atasan"
        />
    <ImageView
        android:id="@+id/chat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/chat"
        android:layout_alignRight="@+id/atasan"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        />
    <TextView
        android:id="@+id/title"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/searchView"
        android:background="@drawable/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Food Nusantara"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="140dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jember"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="160dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/diskon" />


    <ImageView
        android:id="@+id/makanan"
        android:layout_width="163dp"
        android:layout_height="193dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/pecel1" />
    <ImageView
        android:id="@+id/minuman"
        android:layout_width="163dp"
        android:layout_height="193dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dawet1"/>

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        android:layout_marginTop="180dp"
        app:strokeWidth="1dp"/>



    <View
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar"
        />
    <ImageButton
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />
    <ImageButton
        android:id="@+id/keranjang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/keranjang"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="5dp"
        />
    <ImageButton
        android:id="@+id/riwayat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/riwayat"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="215dp"
        android:layout_marginBottom="5dp"
        />
    <ImageButton
        android:id="@+id/profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profil"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="320dp"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>